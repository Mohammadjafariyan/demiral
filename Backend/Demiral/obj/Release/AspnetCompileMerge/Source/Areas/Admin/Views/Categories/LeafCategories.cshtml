@model PagedList.PagedList<Demiral.Models.Category>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { type = 2 })
</p>
@Html.PagedListPager(Model, page => Url.Action("Index", new { pageNumber = page }))
<table class="table">
    <tr>
        <th>
            نام
        </th>
        <th>
            ردیف
        </th>
        <th>
            در MyMarkets
        </th>
        <th>
            موضوع والد
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Row)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InMyMarkets)
            </td>
            <td>
                @if (item.Category2 != null)
                {
                    @Html.DisplayFor(modelItem => item.Category2.Name)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Icon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.onHoverIcon)
            </td>

            <td>
                @Html.ActionLink("ثبت محصول", "Create", new { type = 2, id = item.Id })
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { pageNumber = page }))

